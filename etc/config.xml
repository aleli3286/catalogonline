<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <custom_form>1</custom_form>
                </shown_to_logged_in_user>
                <always_for>
                    <request_online_catalog_form>1</request_online_catalog_form>
                </always_for>
            </captcha>
        </customer>
        <captcha translate="label">
            <frontend>
                <areas>
                    <request_online_catalog_form>
                        <label>Cigar Catalog Sign Up Form</label>
                    </request_online_catalog_form>
                </areas>
            </frontend>
        </captcha>
    </default>
</config>